<div class="row">
	<form class="col l12 s12">
		<div class="row"></div>
		<div class="row">
			<div class="col s12 l12" style="font-size:2em">ProtonVPN account generator</div>
			<p class="col s12 l12">Press generate credientials to create a trial account</p>
			<div class="copyable-field input-field col l4 offset-l2 s12">
				<a href="#" class="tooltipped no-autoinit" data-tooltip="Tap to copy"><i class="small material-icons">content_copy</i></a>
				<input readonly placeholder="[Username]" id="username" type="text" onclick="select(this)">
				<label for="username">Username</label>
			</div>
			
			<div class="copyable-field input-field col l4 s12">
				<a href="#" class="tooltipped no-autoinit" data-tooltip="Tap to copy"><i class="small material-icons">content_copy</i></a>
				<input readonly placeholder="[Password]" id="password" type="text" onclick="select(this)">
				<label for="password">Password</label>
			</div>
		</div>
		<div class="row"></div>
		<div class="row">
			<a class="waves-effect btn waves-light" id="generateBtn">Generate credentials</a>
			<div class="progress col l6 offset-l3 s8 offset-s2 black hide" id="progressBar">
				<div class="indeterminate deep-purple accent-1"></div>
			</div>
		</div>
	</form>
</div>

<script src="/js/bundle.js"></script>